<EditForm Model="@driver" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>Driver Name: </label>
            <div>
                <InputText @bind-Value="@driver.DriverName" class="form-control" />
                <ValidationMessage For="@(() => driver.DriverName)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Driver Age: </label>
            <div>
                <InputNumber @bind-Value="@driver.DriverAge" class="form-control" />
                <ValidationMessage For="@(() => driver.DriverAge)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Driver Gender: </label>
            <div>
                <InputText @bind-Value="@driver.DriverGender" class="form-control" />
                <ValidationMessage For="@(() => driver.DriverGender)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Driver License: </label>
            <div>
                <InputText @bind-Value="@driver.DriverLicense" class="form-control" />
                <ValidationMessage For="@(() => driver.DriverLicense)" />
            </div>
        </div>
    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="drivers" />
</EditForm>

@code {

    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Driver driver { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}