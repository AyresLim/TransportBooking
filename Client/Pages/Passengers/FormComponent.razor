<EditForm Model="@passenger" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>Passenger Name: </label>
            <div>
                <InputText @bind-Value="@passenger.PassengerName" class="form-control" />
                <ValidationMessage For="@(() => passenger.PassengerName)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Passenger Age: </label>
            <div>
                <InputNumber @bind-Value="@passenger.PassengerAge" class="form-control" />
                <ValidationMessage For="@(() => passenger.PassengerAge)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Passenger Contact: </label>
            <div>
                <InputText @bind-Value="@passenger.PassengerContact" class="form-control" />
                <ValidationMessage For="@(() => passenger.PassengerContact)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Passenger Gender: </label>
            <div>
                <InputText @bind-Value="@passenger.PassengerGender" class="form-control" />
                <ValidationMessage For="@(() => passenger.PassengerGender)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Passenger Address: </label>
            <div>
                <InputText @bind-Value="@passenger.PassengerAddress" class="form-control" />
                <ValidationMessage For="@(() => passenger.PassengerAddress)" />
            </div>
        </div>
        </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="passengers" />
</EditForm>

@code {

    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Passenger passenger { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
